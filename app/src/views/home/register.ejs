<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-">

    <link rel="stylesheet" href="/css/home/register.css">

    <script src="/js/home/login.js" defer></script>
    <title>Document</title>
</head>
<body>
<div class="background-wrap">
    <div class="background"></div>
</div>

<form id="accesspanel" action="login" method="post">
    <h1 id="litheader">YS SITE</h1>
    <div class="inset">
        <p>
            <input id="id" type="text" name="username" placeholder="ID" autocomplete="off">
        </p>
        <p>
            <input id="name" type="text" name="username" placeholder="NAME" autocomplete="off">
        </p>
        <p>
            <input id="password" type="password" name="password" placeholder="PASSWORD"
                   autocomplete="off">
        </p>
        <p>
            <input id="confirm-password" type="password" name="password" placeholder="CONFIRM PASSWORD"
                   autocomplete="off">
        </p>
        <div style="text-align: center;">
            <div class="checkboxouter">
                <input type="checkbox" name="rememberme" id="remember" value="Remember">
                <label class="checkbox"></label>
            </div>
            <label for="remember">Remember me for 14 days</label>
        </div>
        <input class="loginLoginValue" type="hidden" name="service" value="login"/>
    </div>

    <div style="text-align: center;" class="message">
        <label>
            Already Registered?
            <a href="/login">Login with an Account</a>
        </label>
    </div>

    <p class="p-container">
        <br>
        <input id="confirmBtn" type="submit" name="Login" value="CONFIRM">
    </p>
</form>
</body>